@model EsselTestLocalApplication.Models.BusinessRoles

    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Role</h4>
            </div>
            <div class="modal-body" style="overflow-x:hidden">
                <form onsubmit="return false">
                    <div class="col-md-12">
                        <br />
                        <div class="form-group">
                            <div class="col-md-1"></div>
                            <div class="col-md-3"><label>Role</label></div>
                            <div class="col-md-4"><input type="text" class="form-control" id="txtNRolecode" /></div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <br />
                        <div class="col-md-1"></div>
                        <div class="col-md-3"><label>Status</label></div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <select class="form-control dropdown-toggle" id="ddlupRoleStatus">
                                    <option value="1" selected="selected">Active</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <br />
                        <div class="col-md-1"></div>
                        <div class="col-md-3"></div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <ul class="list-inline">
                                    <li class="eagle-checkbox">
                                        <label class="eagle-check custom-checkbox">
                                            <input type="checkbox" class="eagle-check-input" name="" value="Yes" id="chkApplforCC" onclick="ApplicableforCCCheck()">
                                            <span class="eagle-check-indicator"></span>
                                            <span class="eagle-check-description">Applicable For CostCenter</span>
                                        </label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12"  id="divRoleCCTypes">
                        <div>
                            <div class="col-md-1"></div>
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.CCTypeIDs, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-4 text-left">
                                <div class="form-group">                                    
                                        @if (Model.CCtypeList.ToList().Count > 0)
                                        {
                                            @Html.ListBoxFor(model => model.CCTypeIDs, new SelectList(Model.CCtypeList, "CCTypeID", "CCTypeDescription"), new { @class = "listbox form-control", @id = "NewRoleCCtypes", size = 4 })
                                        }                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-4"></div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn1 btn-success" onclick="SubmitNewRole()" />

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="text-center">
                            <br />
                            <div id="divNewRoleInfoMsg" class="alert alert-danger hidden row">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.listbox').multiselect({
                includeSelectAllOption: false
            });
            $("#divRoleCCTypes").addClass('hidden');

        });
        function ApplicableforCCCheck() {
            if ($('#chkApplforCC').is(":checked") === true) {
                $("#divRoleCCTypes").removeClass('hidden');
            }
            else {
                $("#divRoleCCTypes").addClass('hidden');
            }

        }
    </script>
