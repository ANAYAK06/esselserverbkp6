@model EsselTestLocalApplication.Models.SubDCA
@{
    ViewBag.Title = "AddEditSubDCA";
    Layout = null;
}

<div class="row col-lg-10">
    @*<h4 style="text-align:center">Add Sub DCA</h4>
    <hr />*@
    <div class="form-horizontal">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-3">@Html.LabelFor(model => model.DCACodeID, htmlAttributes: new { @class = "control-label" })</div>
            <div class="col-lg-4">
                <div class="form-group">      
                    @if (Model.SubDCACodeID == 0)
                    {
                        @Html.DropDownListFor(model => model.DCACodeID, new SelectList(Model.DCACodes, "DCAID", "DCAIDSTR"), "-Please Select-", htmlAttributes: new { @class = "form-control col-md-3 dropdown-toggle", @id = "SubDCAddlCodeID" })
                    }
                    else
                    {
                        @Html.TextBoxFor(model => model.DCACode, htmlAttributes: new { @class = "form-control", @id = "SubDCAddlCodeID", @readOnly = "true" })
                    }
                </div>
            </div>
            </div>
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-3"> @Html.LabelFor(model => model.SubDCACode, htmlAttributes: new { @class = "control-label" })</div>
            <div class="col-lg-4">
                <div class="form-group">                  

                    @if (Model.SubDCACodeID == 0)
                    {
                        @Html.TextBoxFor(model => model.SubDCACode, htmlAttributes: new { @class = "form-control", @id = "txtAddEditSubDCACode" })
                    }
                    else
                    {
                        @Html.TextBoxFor(model => model.SubDCACode, htmlAttributes: new { @class = "form-control", @id = "txtAddEditSubDCACode", @readOnly = "true" })
                    }

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-3">   @Html.LabelFor(model => model.SubDCAName, htmlAttributes: new { @class = "control-label" })</div>
            <div class="col-lg-4">
                <div class="form-group">
                 

                    @Html.TextBoxFor(model => model.SubDCAName, htmlAttributes: new { @class = "form-control", @id = "txtAddEditSubDCAName" })

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-3">  @Html.LabelFor(model => model.ITCodeID, htmlAttributes: new { @class = "control-label" })</div>
            <div class="col-lg-4">
                <div class="form-group">
                  

                    @if (Model.Status == "Approved")
                    {
                        @Html.DropDownListFor(model => model.ITCodeID, new SelectList(Model.ITCodesList, "ITCodeID", "ITCodename"), Model.ITCodeDescription, htmlAttributes: new { @class = "form-control col-md-3 dropdown-toggle", @id = "SubDCAITCodeddlID" })

                    }
                    else
                    {

                        @Html.DropDownListFor(model => model.ITCodeID, new SelectList(Model.ITCodesList, "ITCodeID", "ITCodename"), "-Please Select-", htmlAttributes: new { @class = "form-control col-md-3 dropdown-toggle", @id = "SubDCAITCodeddlID" })

                    }
                </div>
            </div>
        </div>
            <div class="row text-right">
                <div class="form-group">
                  

                        @if (Model.SubDCACodeID == 0)
                        {
                            <input type="submit" value="Submit" class="btn btn-default firmbtns-hover" onclick="AddEditSubDCA()" />
                            <input type="reset" value="Reset" class="btn btn-default firmbtns-hover" style="padding-left:10px;" onclick="ResetSubDCA()" />
                        }
                        else
                        {

                            <input type="submit" value="Submit" class="btn btn-default firmbtns-hover" onclick="UpdaeSubDCA()" />
                        }
                   
                </div>
            </div>
        </div>
</div>
<label class="hidden">
    hdnSubDCAID: @Html.Hidden("hdnSubDCAID", 0)
</label>
<div class="col-md-12 text-center">
    <div id="divAddSubDCAInfoMsg" class="alert alert-danger hidden">
    </div>
</div>



