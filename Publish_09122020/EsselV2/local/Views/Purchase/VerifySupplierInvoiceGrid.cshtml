            var htmltext;
        var InvId,InvNo,Status,MRR;
            $.each(d, function (index, value) {
                // Get value in alert
                if (index == 1)
                    Vid = value;
                if (index == 2)
                    InvNo = value;
                if (index == 7)
                    Status = value;
                if (index == 8)
                    MRR = value;

        });
        //debugger;
        var divid = "divapprInv" + InvId;
        var divid1 = $("#" + divid + "");
        if (Status !== "0") {

            $.ajax({
                type: 'GET',
                dataType: 'html',
                url: '/Purchase/VerifySupplierInvoiceView',
                data: { InvoiceNo: InvNo, },
                success: function (Data) {
                    var divid2 = "divapprInv" + InvId;
                    var divid3 = $("#" + divid2 + "");
                    $(divid3).html(Data);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                }
            });

        }
        //else {
        //    $.ajax({
        //        type: 'GET',
        //        dataType: 'html',
        //        url: '/Purchase/EditSPPOInvoice',
        //        data: { InvoiceNo: InvNo },
        //        success: function (Data) {
        //            var divid2 = "divapprInv" + InvId;
        //            var divid3 = $("#" + divid2 + "");
        //            $(divid3).html(Data);
        //        },
        //        error: function (XMLHttpRequest, textStatus, errorThrown) {
