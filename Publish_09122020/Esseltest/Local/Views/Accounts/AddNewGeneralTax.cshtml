@model EsselTestLocalApplication.Models.Accounts.CreateTaxes
<form onsubmit="return false">
    <div class="row ">
        <div class="col-md-12">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.TaxName)
                    @Html.TextBoxFor(model => model.TaxName, htmlAttributes: new { @class = "form-control", @id = "txtgtaxname" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.ApplicableFrom)
                    @Html.TextBoxFor(model => model.ApplicableFrom, "{0:dd-MMM-yyyy}", new { @id = "txtgTaxdate", @class = "form-control", type = "text" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.TaxFor)
                    @Html.DropDownListFor(model => model.TaxFor, new SelectList(Model.DcaCodeList, "DCACode", "DCAIDSTR"), "-Please Select-", htmlAttributes: new { @class = "form-control dropdown-toggle", @id = "ddlgtaxdcacode" , onchange="GeneralTaxDcaChange()"})
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.SubDCA)
                    @Html.DropDownListFor(model => model.SubDCA, new SelectList(Model.SDcaCodeList, "SubDCACode", "SubDCAIDSTR"), "-Please Select-", htmlAttributes: new { @class = "form-control dropdown-toggle", @id = "ddlgtaxsubdca" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.TaxNo)
                    @Html.TextBoxFor(model => model.TaxNo, htmlAttributes: new { @class = "form-control", @id = "txtgtaxno" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.Remarks)
                    @Html.TextAreaFor(model => model.Remarks, htmlAttributes: new { @class = "form-control", @id = "txtgdescription", @rows = "3" })
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="text-right">
                <input type="text" value="0" id="txtGeneralTaxRoleId" style="display:none" />
                <button class="btn btn1 btn-success" id="btnSubmitGentax" onclick="SubmitGeneralTaxes()">Submit</button>
                
            </div>
        </div>
        <div class="col-md-12 text-center">
            <br/>
            <div id="divAddGenTaxInfoMsg" class="alert alert-danger hidden">
            </div>
        </div>
    </div>
</form>
<script>
     $(document).ready(function () {
        var RoleID = '@Session["Roleid"]';
         $("#txtGeneralTaxRoleId").val(RoleID);
        });
</script>