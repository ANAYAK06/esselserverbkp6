<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/EsselStyles/style.css" rel="stylesheet" />
    <link href="~/Content/EsselStyles/responsive.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header class="header-home">

        <div class="logo">
            <a href="index.html">
                <img src="~/Content/EsselImages/logo.jpg" class="img-responsive">
            </a>
        </div>
        <div class="header-top-area hidden-xs">
            <div class="container-fluid">
                <div class="row">
                    <!-- header-top-left start -->
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <h4 style="text-align:center;font-weight:bold;color:#fff;float:right">Employee Information</h4>
                    </div>
                    <!-- header-top-left end -->
                    <!-- header-top-right start -->
                    <div class="col-lg-6 col-md-6 hidden-xs hidden-sm">
                        <div class="header-top-right">
                            <div class="top-menu">
                                <ul>
                                    <li>
                                    </li>
                                    <!--my account-->
                                    <li>
                                        <a href="#"><i class="fa fa-user"></i> My Account</a>
                                        <ul>

                                            <li><a href="#ModalRolelogin" data-toggle="modal">Role Login</a></li>
                                            <li><a href="#ModalEmpChangePwd" data-toggle="modal">Change Password</a></li>
                                            <li><a href="/Login/Logout">Logout<i class="fa fa-power-off"></i></a></li>

                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-mid-area" id="divMenu">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-2 col-md-2 p-0">
                    </div>
                    <div class="col-lg-3  col-md-3 hidden-xs hidden-sm p-0">
                        <div class="mainmenu hme-mainmenu">
                            <nav class="text-left">
                                <ul class="menu1">
                                    <li class="Admin" id="Adminli">
                                    </li>
                                    <li class="ReportsAdmin" id="Reportsli">
                                    </li>
                                    <li class="ConfigurationsAdmin" id="Configurationli">
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </header>

    <section class="m-tb-40">
        <div class="container">
            <div class="row">
            </div>
            <div class="row">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div id="ModalRolelogin" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Role Login</h4>
                </div>
                <div class="modal-body" style="overflow:hidden">
                    @Html.Action("RoleLogin", "Login")
                </div>
            </div>
        </div>
    </div>
    <div id="ModelForgotPwd" class="modal log-box" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Forgot Role Password</h4>
                </div>
                <div class="modal-body" style="overflow:hidden">
                    @Html.Action("ForgotPwd", "Login")
                </div>

            </div>
        </div>
    </div>
    <div id="ModalEmpChangePwd" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Employee Password</h4>
                </div>
                <div class="modal-body" style="overflow:hidden">
                    @Html.Action("ChangePassword", "Login")
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
</body>
</html>
