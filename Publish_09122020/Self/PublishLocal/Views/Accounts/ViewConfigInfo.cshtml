@model List<EsselTestLocalApplication.Models.Accounts.PageConfiguration1>
<div class="table-responsive">
    <table id="tblconfigGrid" style="width:100%" class="hover stripe nowrap example dataTable no-footer">
        <thead>
            <tr>
                <th>Configuration For</th>
                <th>Configuration Category</th>
                <th>Configuration Value</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Configurationfor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Configcategories)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConfigValue)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    var openRows = new Array();
    $(document).ready(function () {
        var configGrid = null;
        InitializeconfigGrid();
    });
    function InitializeconfigGrid() {
        configGrid = $('#tblconfigGrid').DataTable({
            destroy: false,
            paging: false,
            lengthChange: false,
            searching: false,
            pagingType: false,
            ordering: false,
            formatNumber: false,
            language: {
                "emptyTable": "No Records Found"
            },
        });
    }

</script>