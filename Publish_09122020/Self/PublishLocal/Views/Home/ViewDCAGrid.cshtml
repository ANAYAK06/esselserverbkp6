@model List<EsselTestLocalApplication.Models.DCAdetails>
@{
    ViewBag.Title = "ViewDCAGrid";

}



    <div class="table-responsive">
        <table id="tblDCAList" class="hover stripe nowrap example dataTable no-footer">
            <thead>
                <tr>
                    <th class="hidden"></th>
                    <th>DCA Code</th>
                    <th>DCA Name</th>
                    <th>DCA Type</th>
