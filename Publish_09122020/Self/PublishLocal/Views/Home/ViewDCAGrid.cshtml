                            @Html.DisplayFor(modelItem => item.BasicDCAInfo.DCACode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasicDCAInfo.DCAName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasicDCAInfo.DCATypeName)
                        </td>
