@model List<EsselTestLocalApplication.Models.BasicFirmInfo>
<div class="table-responsive">
    <table id="tblpromoterGrid" style="width:100%" class="hover stripe nowrap example dataTable no-footer">
        <thead>
            <tr style="font-weight:200; align-content:center"><th colspan="2">Promoter Details</th></tr>
            <tr>
                <th>Name</th>
                <th>Address</th>             
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Promoternames)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PromoterAddress)
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    var openRows = new Array();
    $(document).ready(function () {
        var ApprovecccashtransferGrid = null;
        InitializeApprcccashtransferGrid();
    });
    function InitializeApprcccashtransferGrid() {
        ApprovecccashtransferGrid = $('#tblpromoterGrid').DataTable({
            destroy: false,
            paging: false,
            lengthChange: false,
            searching: false,
            pagingType: false,
            ordering: false,
            formatNumber: false,
            language: {
                "emptyTable": "No Records Found"
            },
        });
    }

</script>
